<config>
    <modules>
        <Faonni_Compare>
        <version>1.2.0</version>
        </Faonni_Compare>
    </modules>
    <global>
        <helpers>
        <faonni_compare>
            <class>Faonni_Compare_Helper</class>
        </faonni_compare>
        <catalog>
            <rewrite>
            <product_compare>Faonni_Compare_Helper_Product_Compare</product_compare>
            </rewrite>
        </catalog>
        </helpers>
        <models>
        <faonni_compare>
            <class>Faonni_Compare_Model</class>
        </faonni_compare>
        </models>
        <events>
        <controller_action_predispatch_catalog>
            <observers>
            <faonni_compare_predispatch>
                <class>faonni_compare/observer</class>
                <method>preDispatch</method>
            </faonni_compare_predispatch>
            </observers>
        </controller_action_predispatch_catalog>
        <controller_action_layout_load_before>
            <observers>
            <faonni_compare_render_layout>
                <class>faonni_compare/observer</class>
                <method>renderLayout</method>
            </faonni_compare_render_layout>
            </observers>
        </controller_action_layout_load_before>
        </events>
    </global>
    <frontend>
        <layout>
        <updates>
            <faonni_compare>
            <file>faonni/compare.xml</file>
            </faonni_compare>
        </updates>
        </layout>
    </frontend>
    <default>
        <catalog>
        <recently_products>
            <active>1</active>
            <display_in_sidebar>1</display_in_sidebar>
        </recently_products>
        </catalog>
    </default>
</config>
